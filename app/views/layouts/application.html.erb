<!DOCTYPE html>
<html>
  <head>
    <title>Base</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <div><%= link_to "トップ", root_path %></div>
    <div><%= link_to "投稿する", new_post_path %></div>
    <div><%= link_to "投稿一覧", posts_path %></div>
    <% if user_signed_in? %>
    <div><%= link_to "マイページ", user_path(current_user.id), class: "text-white" %></div>  
    <%= link_to "ログイン", new_user_session_path  %>
    <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></div>
    <%= link_to "新規登録", new_user_registration_path %>
    <% end %>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
  </body>
</html>
